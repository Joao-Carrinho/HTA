<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/staticTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deve inserir os valores de máxima e mínima assim como a freq cardíaca ex 130, 80, 75"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/inputNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sistólica(Máxima)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diastólica(Mínima)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputNumber3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BPM(Pulsação)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserir Valores"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/staticTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saiba como medir corretamente a sua tensão arterial na secção de informação"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/staticTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicação desenvolvida no âmbito do prémio Missão 70/26 da Sociedade Portuguesa de Hipertensão"
        android:textSize="16sp"
        android:textColor="#97525151"
        android:paddingBottom="2dp"/>
    <TextView
        android:id="@+id/staticTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alexandra Pimentel, Ana Rita Queirós, Diana Lamas, Nina Lopes"
        android:textSize="16sp"
        android:textColor="#97525151"
        android:paddingBottom="2dp"/>
</LinearLayout>
