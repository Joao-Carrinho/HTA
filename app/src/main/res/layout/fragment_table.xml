<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <HorizontalScrollView
        android:id="@+id/headerScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#A00404">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_systolic"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_diastolic"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_bpm"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_date"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_time"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MÃ©d. TAS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_avg_systolic"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/header_avg_diastolic"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/bodyScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </HorizontalScrollView>
</LinearLayout>
